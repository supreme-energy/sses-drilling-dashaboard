{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : "off",
    "brace-style"          : [2, "stroustrup", {"allowSingleLine": true}],
    "semi"                 : [2, "always"],
    "quotes"               : "off",
    "no-return-await"      : 2,
    "jsx-quotes"           : [2, "prefer-double"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "comma-dangle"         : "off",

    "react/jsx-space-before-closing"     : 0,
    "react/self-closing-comp"            : 0
  }
}
